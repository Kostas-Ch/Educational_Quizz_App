<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    android:background="@drawable/background_img"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp" >

        <TextView
            android:id="@+id/textview_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Η ερώτηση του εκάστοτε μαθήματος"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:minHeight="50dp"
                android:progress="0"
                android:indeterminate="false"
                />
            <TextView
                android:id="@+id/textview_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="0/10"/>


        </LinearLayout>
        <TextView
            android:id="@+id/text_optOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_background_border"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="apantisi1"
            />
        <TextView
            android:id="@+id/text_optTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_background_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="apantisi2"
            />
        <TextView
            android:id="@+id/text_optThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_background_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="apantisi3"
            />
        <TextView
            android:id="@+id/text_optFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_background_border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="apantisi4"
            />

<Button
    android:id="@+id/submit_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="35dp"
    android:background="@android:color/holo_orange_dark"
    android:text="Υποβολή"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:textStyle="bold"
    />

    </LinearLayout>
</ScrollView>